# SlightBuild Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=development
APP_NAME=SlightBuild
APP_VERSION=1.0.0
ENVIRONMENT=development

# AWS Configuration
AWS_REGION=us-east-1

# Analytics and Tracking (Fill with your IDs)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
HOTJAR_SITE_ID=your_hotjar_site_id

# Contact Form Configuration (Fill with your service details)
CONTACT_FORM_ENDPOINT=your_form_endpoint
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id
EMAILJS_USER_ID=your_emailjs_user_id

# Domain Configuration (Replace with your domains)
PRODUCTION_DOMAIN=yourdomain.com
STAGING_DOMAIN=staging.yourdomain.com

# CDN Configuration
CDN_URL=https://your-cloudfront-domain.cloudfront.net
ASSETS_CDN=true

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_DURATION=31536000

# Security Configuration
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_FRAME_GUARD=true

# Monitoring Configuration
ENABLE_ERROR_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_LIVE_CHAT=false
ENABLE_NEWSLETTER=true
ENABLE_DARK_MODE=false
ENABLE_BLOG=false

# Social Media Links (Replace with your profiles)
LINKEDIN_URL=https://linkedin.com/in/yourprofile
TWITTER_URL=https://twitter.com/yourhandle
GITHUB_URL=https://github.com/yourusername
DRIBBBLE_URL=https://dribbble.com/yourprofile

# Business Information (Replace with your details)
BUSINESS_EMAIL=your-email@yourdomain.com
BUSINESS_PHONE=+1-xxx-xxx-xxxx
BUSINESS_ADDRESS=Your City, State
BUSINESS_HOURS=Mon-Fri 9AM-6PM

# SEO Configuration (Customize for your site)
DEFAULT_TITLE=Your Site Title
DEFAULT_DESCRIPTION=Your site description
DEFAULT_KEYWORDS=your,keywords,here
DEFAULT_AUTHOR=Your Name
DEFAULT_IMAGE=/assets/images/og-image.jpg
TWITTER_HANDLE=@yourhandle