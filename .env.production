# SlightBuild Production Environment Configuration

# Application Configuration
NODE_ENV=production
APP_NAME=SlightBuild
APP_VERSION=1.0.0
ENVIRONMENT=production

# AWS Configuration
AWS_REGION=us-east-1

# Analytics and Tracking
# Replace with your actual Google Analytics ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# Replace with your actual Facebook Pixel ID  
FACEBOOK_PIXEL_ID=
# Replace with your actual Hotjar Site ID
HOTJAR_SITE_ID=

# Contact Form Configuration  
CONTACT_FORM_ENDPOINT=
# Replace with your actual email service API key
EMAILJS_SERVICE_ID=
EMAILJS_TEMPLATE_ID=
EMAILJS_USER_ID=

# Domain Configuration
PRODUCTION_DOMAIN=slightbuild.com
STAGING_DOMAIN=staging.slightbuild.com

# CDN Configuration
CDN_URL=https://d1234567890.cloudfront.net
ASSETS_CDN=true

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_DURATION=31536000

# Security Configuration
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_FRAME_GUARD=true

# Monitoring Configuration
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=

# Feature Flags
ENABLE_LIVE_CHAT=false
ENABLE_NEWSLETTER=true
ENABLE_DARK_MODE=false
ENABLE_BLOG=false

# Social Media Links
LINKEDIN_URL=https://linkedin.com/in/slightbuild
TWITTER_URL=https://twitter.com/slightbuild
GITHUB_URL=https://github.com/slightbuild
DRIBBBLE_URL=https://dribbble.com/slightbuild

# Business Information
BUSINESS_EMAIL=info@slightbuild.com
BUSINESS_PHONE=713-340-4443
BUSINESS_ADDRESS=Houston, TX
BUSINESS_HOURS=Mon-Fri 9AM-6PM CST

# SEO Configuration
DEFAULT_TITLE=SlightBuild - Modern Web & Mobile Development
DEFAULT_DESCRIPTION=Professional web development, web applications, and mobile app development services. Building digital excellence with modern technologies.
DEFAULT_KEYWORDS=web development,mobile apps,react,nodejs,aws,slightbuild
DEFAULT_AUTHOR=SlightBuild
DEFAULT_IMAGE=/assets/images/og-image.jpg
TWITTER_HANDLE=@slightbuild